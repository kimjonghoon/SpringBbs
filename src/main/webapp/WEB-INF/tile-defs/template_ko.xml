<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC  
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <definition name="defaultTemplate" template="/WEB-INF/jsp/template/template.jsp">
        <put-attribute name="header" value="/WEB-INF/jsp/inc/header.jsp" />
        <put-attribute name="main-menu" value="/WEB-INF/jsp/inc/main-menu.jsp" />
        <put-attribute name="extra" value="/WEB-INF/jsp/inc/extra.jsp" />
        <put-attribute name="footer" value="/WEB-INF/jsp/inc/footer.jsp" />
    </definition>
    <!-- 홈페이지 -->
	<definition name="index" extends="defaultTemplate">
		<put-attribute name="title" value="홈페이지" />
		<put-attribute name="keywords" value="자바스쿨,홈페이지" />
		<put-attribute name="description" value="자바스쿨에 오신 걸 환영합니다." />
		<put-attribute name="content" value="/WEB-INF/jsp/index.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/jsp/index-menu.jsp" />
	</definition>
	<!-- 에러 페이지 -->
	<definition name="403" extends="defaultTemplate">
		<put-attribute name="title" value="403 에러" />
		<put-attribute name="keywords" value="403 에러" />
		<put-attribute name="description" value="스프링 시큐리티 필터 설정에 의한 403" />
		<put-attribute name="content" value="/WEB-INF/jsp/403.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/jsp/error-menu.jsp" />
	</definition>
	<definition name="error-403" extends="defaultTemplate">
		<put-attribute name="title" value="403 에러" />
		<put-attribute name="keywords" value="403 에러" />
		<put-attribute name="description" value="스프링 MVC에서 발생한 403" />
		<put-attribute name="content" value="/WEB-INF/jsp/error-403.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/jsp/error-menu.jsp" />
	</definition>
	<definition name="error" extends="defaultTemplate">
		<put-attribute name="title" value="에러" />
		<put-attribute name="keywords" value="에러" />
		<put-attribute name="description" value="스프링 MVC에서 발생한 에러" />
		<put-attribute name="content" value="/WEB-INF/jsp/error.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/jsp/error-menu.jsp" />
	</definition>
	<!-- 회원 -->		
	<definition name="users/*" extends="defaultTemplate">
		<put-attribute name="title" value="회원" />
		<put-attribute name="keywords" value="회원" />
		<put-attribute name="description" value="회원" />
		<put-attribute name="content" value="/WEB-INF/jsp/users/{1}.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/jsp/users/user-menu.jsp" />
	</definition>
	<!-- 게시판 -->		
	<definition name="bbs/*" extends="defaultTemplate">
		<put-attribute name="title" value="게시판" />
		<put-attribute name="keywords" value="게시판" />
		<put-attribute name="description" value="게시판" />
		<put-attribute name="content" value="/WEB-INF/jsp/bbs/{1}.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/jsp/bbs/bbs-menu.jsp" />
	</definition>
	<!-- 블로그 포스트 -->
	<!-- Java -->
	<definition name="java/index" extends="defaultTemplate">
		<put-attribute name="title" value="자바 관련 포스트 색인" />
		<put-attribute name="keywords" value="자바 관련 포스트 색인" />
		<put-attribute name="description" value="자바 관련 포스트 색인" />
		<put-attribute name="content" value="/WEB-INF/jsp/java/index_ko.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/jsp/java/java-menu_ko.jsp" />
	</definition>			
	<definition name="java/Features" extends="defaultTemplate">
		<put-attribute name="title" value="자바의 특징" />
		<put-attribute name="keywords" value="자바,객체지향 프로그래밍,자바 버추얼 머신,플랫폼 독립적" />
		<put-attribute name="description" value="자바 특징을 설명합니다." />
		<put-attribute name="content" value="/WEB-INF/jsp/java/Features_ko.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/jsp/java/java-menu_ko.jsp" />
	</definition>
