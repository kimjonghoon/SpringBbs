		<put-attribute name="content" value="/WEB-INF/jsp/javascript/index_ko.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/jsp/javascript/javascript-menu_ko.jsp" />
	</definition>
	<!-- admin -->		
	<definition name="admin/index" extends="defaultTemplate">
		<put-attribute name="title" value="Admin" />
		<put-attribute name="keywords" value="Admin" />
		<put-attribute name="description" value="Admin" />
		<put-attribute name="content" value="/WEB-INF/jsp/admin/index.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/jsp/admin/admin-menu.jsp" />
	</definition>
